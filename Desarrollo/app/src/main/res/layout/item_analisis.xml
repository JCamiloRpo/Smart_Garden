<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TxtItemAnalisis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_analisis"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/title_analisis"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_right_white_24db" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ChtItemLine"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:background="@drawable/style_chart" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>